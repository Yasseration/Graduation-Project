<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graduation Project - @ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @RenderSection("style", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div id="mynav" class="navbar navbar-expand-md navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href=@Url.Action("Index","Home")> <b>Graduation Project</b></a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">

                @if (Request.IsAuthenticated)
                {
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" id="analysis"> <a class="nav-link" href=@Url.Action("Analysis","Patient")><text>Analysis</text></a></li>
                    <li class="nav-item" id="history"> <a class="nav-link" href=@Url.Action("History","Patient")><text>History</text></a></li>
                    <li class="nav-item" id="profile"><a class="nav-link" href=@Url.Action("Profile","Patient")><text>Profile</text></a></li>
                    <li class="nav-item">
                        @using (Html.BeginForm("Logout", "Patient", FormMethod.Post, new { id = "logoutForm"}))
                        {
                            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                                <text>Sign out</text>
                            </a>
                        }
                    </li>
                </ul>
                }
                else
                {
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" id="about"> <a class="nav-link" href=@Url.Action("About","Home")><text>About us</text></a></li>
                        <li class="nav-item" id="login">   <a class="nav-link" href=@Url.Action("Login","Patient")><text>Sign in</text></a></li>
                        <li class="nav-item" id="register"><a class="nav-link" href=@Url.Action("Register","Patient")><text>Register</text></a></li>
                    </ul>
                }

            </div>
        </div>
    </div>

    @RenderBody()


    <footer class="px-lg-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 px-1">
                    <h5 class="font-weight-bold">About us</h5>
                    <p class="pr-2">
                        Searching for quick diagnosis ? Our project aims to determine whether your skin changes are likely to be skin cancer,
                        Note that further testing may be needed to confirm that diagnosis.
                    </p>
                </div>
                <div class="col-md-3 px-1">
                    <h5 class="font-weight-bold">Links</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="links">
                                <li><a href="/Patient/Login">Sign in</a></li>
                                <li><a href="/Patient/Register">Register</a></li>
                                <li><a href="/Home/About">About us</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="links">
                                <li><a href="/Patient/Analysis">Analysis</a></li>
                                <li><a href="/Patient/History">History</a></li>
                                <li><a href="/Patient/Profile">Profile</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="col-md-3 px-1">
                    <h5 class="font-weight-bold mb-1">Follow us</h5>
                    <a href="https://www.linkedin.com/" class="social-link"><i class="fab fa-linkedin fa-2x" title="LinkedIn"></i></a>
                    <a href="https://www.facebook.com/" class="social-link"><i class="fab fa-facebook-square fa-2x" title="Facebook"></i></a>
                    <a href="https://twitter.com/" class="social-link"><i class="fab fa-twitter-square fa-2x" title="Twitter"></i></a>
                    <p class="mt-2">&copy; 2020 <b>Graduation Project</b>. All Rights Reserved, Developed by <b style="color:var(--main-sec-color)">Mahmoud Yasser</b>.</p>
                </div>
            </div>
        </div>

    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/assets")
    @RenderSection("scripts", required: false)
</body>
</html>
